<%- include('./partials/header') %>

<div class="hero-banner text-center fade-in-beige">
  <h1 class="display-4 mb-3">Amour De Beauté</h1>
  <p class="lead fs-3" style="color: var(--brown-text);">Сіздің сұлулығыңыз үшін жоғары сапалы косметика</p>
  <p class="fs-5 text-muted mb-4">Теріңіз бен сұлулығыңызға қамқорлықпен жасалған сәнді косметика әлемін ашыңыз</p>
  <a href="/products" class="btn btn-beige btn-lg">
    <i class="fas fa-gem me-2"></i>Каталогқа өту
  </a>
</div>

<h2 class="mb-4 mt-5 text-center">Танымал өнімдер</h2>
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
  <% featuredProducts.forEach(product => { %>
    <div class="col fade-in-beige">
      <div class="card card-beige h-100">
        <% if (product.isNew) { %>
          <span class="badge bg-secondary position-absolute top-0 end-0 m-2">Жаңа</span>
        <% } %>
        <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text text-truncate"><%= product.description %></p>
          <p class="product-price"><%= product.price.toFixed(2) %> ₸</p>
          <div class="d-flex justify-content-between mt-auto">
            <a href="/products/<%= product._id %>" class="btn btn-outline-secondary">Толығырақ</a>
            <form action="/cart/add" method="POST">
              <input type="hidden" name="productId" value="<%= product._id %>">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="btn btn-beige">
                <i class="fas fa-shopping-cart"></i> Себетке
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

