<%- include('../partials/header') %>
<div class="container py-4">
  <div class="row g-4">
    <div class="col-md-6">
      <div class="card card-beige p-3">
        <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
      </div>
    </div>
    <div class="col-md-6">
      <h2><%= product.name %></h2>
      <div class="product-price mb-3"><%= product.price.toFixed(2) %> ₸</div>
      <div class="mb-3"><%= product.description %></div>
      <form action="/cart/add" method="POST" class="mb-3">
        <input type="hidden" name="productId" value="<%= product._id %>">
        <input type="number" class="form-control mb-3" name="quantity" value="1" min="1" style="max-width:120px;">
        <button type="submit" class="btn btn-beige btn-lg w-100">Себетке қосу</button>
      </form>
      <% if (product.category) { %>
        <div class="mb-3"><span class="badge bg-secondary"><%= product.category %></span></div>
      <% } %>
      <a href="/products" class="btn btn-outline-secondary">&larr; Каталогқа</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>